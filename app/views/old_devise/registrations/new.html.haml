%h3.col-sm-offset-2
  Sign Up

%br
= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"} ) do |f|
  = devise_error_messages!
  .form-group
    = f.label :full_Name, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :fullname, autofocus: true, :class => 'form-control'
  .form-group
    = f.label :email, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.email_field :email, :class => 'form-control'
  .form-group
    = f.label "JIRA Name", :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :jira_name, :class => 'form-control'
      .help-block
        %i
          Provide your JIRA user name (e.g. jim.smith) to submit tickets from this tool.
        
  .form-group
    = f.label :password, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password, autocomplete: "off", :class => 'form-control'
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
  .form-group
    = f.label :confirm, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'
  .actions.col-sm-offset-2
    .col-sm-4
      = f.submit "Sign Up", :class => 'btn btn-primary'


     
