%h1 Listing people

%table
  %thead
    %tr
      %th Fullname
      %th Email
      %th Role
      %th Title
      %th
      %th
      %th

  %tbody
    - @people.each do |person|
      %tr
        %td= person.fullname
        %td= person.email
        %td= person.role
        %td= person.title
        %td= link_to 'Show', person
        %td= link_to 'Edit', edit_person_path(person)
        %td= link_to 'Destroy', person, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

